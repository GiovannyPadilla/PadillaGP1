@model PadillaGP1.Models.Cliente

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles del Cliente</h1>

<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Campo</th>
            <th>Valor</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Html.DisplayNameFor(model => model.Nombre)</td>
            <td>@Html.DisplayFor(model => model.Nombre)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.Saldo)</td>
            <td>@Html.DisplayFor(model => model.Saldo)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.EsVip)</td>
            <td>@Html.DisplayFor(model => model.EsVip)</td>
        </tr>
        <tr>
            <td>@Html.DisplayNameFor(model => model.FechaNacimiento)</td>
            <td>@Html.DisplayFor(model => model.FechaNacimiento)</td>
        </tr>
    </tbody>
</table>

<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.ClienteId">Editar</a> |
    <a class="btn btn-secondary" asp-action="Index">Volver a la lista</a>
</div>
